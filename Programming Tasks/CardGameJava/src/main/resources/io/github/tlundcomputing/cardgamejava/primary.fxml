<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import java.net.* ?>
<?import javafx.scene.canvas.*?>

<GridPane alignment="CENTER" vgap="20" hgap="20" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.tlundcomputing.cardgamejava.PrimaryController">
   <children>
      <Label id="title" text="Card Game!" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3" />
      <Canvas fx:id="card1Canvas" height="150" width="100" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
      <Label text="Vs." GridPane.columnIndex="1" GridPane.rowIndex="1"/>
      <Canvas fx:id="card2Canvas" height="150" width="100" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
      <Label fx:id="p1Lbl" text="Player 1" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
      <Label fx:id="p2Lbl" text="Player 2" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
      <Button fx:id="setupBtn" text="Setup" onAction="#setup" GridPane.columnIndex="0" GridPane.rowIndex="3" />
      <Button fx:id="nextRoundBtn" text="Next Round" onAction="#nextRound" GridPane.columnIndex="2" GridPane.rowIndex="3" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <stylesheets>
       <URL value="@style.css" />
   </stylesheets>
</GridPane>
